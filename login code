        <div class="mode-toggle">
            <button id="loginTab" class="mode-btn active" onclick="setMode('login')">SECURE LOGIN</button>
            <button id="regTab" class="mode-btn" onclick="setMode('reg')">NEW USER</button>
        </div>

        <form id="authForm">
            <div class="input-group">
                <label>Personnel ID</label>
                <div class="input-wrapper">
                    <i class="fa-solid fa-id-card"></i>
                    <input type="text" id="userId" placeholder="Enter your ID" required>
                </div>
            </div>

            <div class="input-group">
                <label>Secure Key</label>
                <div class="input-wrapper">
                    <i class="fa-solid fa-lock"></i>
                    <input type="password" id="userPass" placeholder="••••••••" required>
                </div>
            </div>

            <button type="submit" id="mainBtn" class="submit-btn">
                INITIALIZE SYSTEM <i class="fa-solid fa-arrow-right"></i>
            </button>

            <div id="statusBox" class="alert"></div>
        </form>
    </div>

    <script>
        let currentMode = 'login';

        function setMode(mode) {
            currentMode = mode;
            document.getElementById('loginTab').className = mode === 'login' ? 'mode-btn active' : 'mode-btn';
            document.getElementById('regTab').className = mode === 'reg' ? 'mode-btn active' : 'mode-btn';
            
            const btn = document.getElementById('mainBtn');
            btn.innerHTML = mode === 'login' ? 
                'INITIALIZE SYSTEM <i class="fa-solid fa-arrow-right"></i>' : 
                'CREATE ACCOUNT <i class="fa-solid fa-user-plus"></i>';
            
            document.getElementById('statusBox').style.display = 'none';
        }

        document.getElementById('authForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const id = document.getElementById('userId').value;
            const pass = document.getElementById('userPass').value;
            const status = document.getElementById('statusBox');

            // Virtual Database logic using LocalStorage
            let userDb = JSON.parse(localStorage.getItem('sbMedDatabase')) || {'admin': 'med123'};

            if (currentMode === 'reg') {
                if (userDb[id]) {
                    showStatus("ID already registered in system.", "error");
                } else {
                    userDb[id] = pass;
                    localStorage.setItem('sbMedDatabase', JSON.stringify(userDb));
                    showStatus("Account Created. Protocol ready.", "success");
                    setTimeout(() => setMode('login'), 1500);
                }
            } else {
                if (userDb[id] && userDb[id] === pass) {
                    sessionStorage.setItem('currentUser', id);
                    window.location.href = "index.html";
                } else {
                    showStatus("Invalid Personnel ID or Secure Key.", "error");
                }
            }
        });

        function showStatus(text, type) {
            const status = document.getElementById('statusBox');
            status.innerText = text;
            status.className = `alert ${type}`;
            status.style.display = 'block';
        }
    </script>
